<div class="container mt-4">
  <div class="row">
    <div class="card-articles">
      <h1>Articles#index</h1>
      <% @articles.each do |article| %>
        <% if policy(article).edit? %>
            <li class="list-group-item ps-3 pe-0 py-1">
              <div class="d-flex flex-row justify-content-end mb-1">
                <%= link_to edit_article_path(article) do %>
                  <i class="fa-solid fa-pen-to-square me-3 text-info"></i>
                <% end %>
                <%= link_to article_path(article),
                  data: {turbo_method: :delete, turbo_confirm: "Etes vous sure ?", :method=>'delete'} do %>
                  <i class="fa-solid fa-trash-can me-3 text-danger"></i>
                <% end %>

              </div>
            </li>
            <% end %>
        <h2><%= article.title %> </h2>
        <p><%= raw article.content %> </p>
      <% end %>
    </div>
  </div>
</div>

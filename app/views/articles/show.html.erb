<div class="container mt-4">
  <div class="row">
    <h2><%= @article.title %></h2>
    <hr>
    <p><%= raw @article.content %></p>
    <div>
      <%= link_to 'Edit', edit_article_path(@article) %> |
      <%= link_to 'Back', root_path %>
      <hr>
      <%= link_to articles_path, class: "btn btn-primary" do %>
        <i class="fas fa-arrow-left text-white"></i>
      <% end %>
    </div>
  </div>
</div>

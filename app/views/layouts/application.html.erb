<!DOCTYPE html>
<html>
  <head>
    <title>IntranetCfdt</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= tinymce_assets %>
    <script type="text/javascript" src="/assets/tinymce.js"></script>
    <script src="https://cdn.tiny.cloud/1/4xtli9n7fygv47gzz4oyw7nwd6porb60kf9q2nzbnm8p0kou/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
      tinymce.init({
        selector: '.tinymce',
        valid_elements: `
            a[href|target=_blank|rel],strong/b,i/em,u,
            h1,h2,h3,h4,h5,h6,p,
            img[src|alt],
            iframe[src|frameborder|allowfullscreen],
            br,ul,ol,li,video[src|type],source[src|type]
            `,
        height: 500,
        menubar: false,
        theme : "advanced",
        plugins: [
          'a11ychecker','advlist','advcode','advtable','autolink','checklist','export',
          'lists','link','image', 'image_tools', 'charmap','preview','anchor','searchreplace','visualblocks',
          'powerpaste','fullscreen','formatpainter','insertdatetime','media','table','help','wordcount', 'cloudinaryimage'
        ],
        toolbar: 'undo redo | casechange blocks | bold italic backcolor | ' +
          'alignleft aligncenter alignright alignjustify | ' +
          'bullist numlist checklist outdent indent | removeformat | a11ycheck code table help' +
          'image' + 'image_tools', 'cloudinaryimage' +
      });
    </script>
  </head>

  <body>
    <%= render "shared/navbar" %>
    <%= render "shared/flashes" %>
    <%= yield %>
  </body>
</html>
